{
    "files.exclude": {
        "**/*.pyc": {"when": "$(basename).py"}, 
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true
    },
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${env:PYTHONPATH}:${workspaceRoot}"
    },
    "python.envFile": "${workspaceRoot}/.env"
}